<div class="container" id="character-page">
  <h1 class="text-center">Choose Your Character</h1>
  <div class="row">
    <div class="col-md-12">
      {{#each characters}}
        <div class="character" data-name="{{this.name}}" data-ap={{this.ap}} data-hp={{this.hp}}>
          <h1 class="character-name">{{this.name}}</h1>
          <p>
            {{this.description}}
          </p>
          <h3>Attack Points: {{this.ap}}</h3>
          <h3>Health Points: {{this.hp}}</h3>
        </div>
      {{/each}}
    </div>
  </div>
</div>

<!-- SC sets the chosen character in local storage
We may want to change this later -->
<script type="text/javascript">
  $(document).on('click', '.character', function(){
    var character = {
      name: $(this).attr('data-name'),
      hp: $(this).attr('data-hp'),
      ap: $(this).attr('data-ap'),
    }
    localStorage.setItem('character', JSON.stringify(character));
    window.location = '/game';
  });
</script>
